<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>be.nabu</groupId>
	<artifactId>modules</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<parent>
		<groupId>be.nabu</groupId>
		<artifactId>core</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	
	<properties>
		<nabu-utils-version>1.1</nabu-utils-version>
		<nabu.protocols.http-server-version>1.1</nabu.protocols.http-server-version>
		<nabu.authentication.oauth2-server-version>1.2-SNAPSHOT</nabu.authentication.oauth2-server-version>
		<nabu.web-application-version>1.1</nabu.web-application-version>
	</properties>
		
	<build>
		<resources>
			<resource>
				<directory>.</directory>
				<excludes>
					<exclude>.flattened-pom.xml</exclude>
					<exclude>target</exclude>
					<exclude>pom.xml</exclude>
					<exclude>.pom.xml.swp</exclude>
					<exclude>.gitignore</exclude>
					<exclude>.git</exclude>
					<exclude>RELEASE.md</exclude>
				</excludes>
			</resource>
		</resources>
		<finalName>${project.groupId}.${project.artifactId}.${project.version}</finalName>
		<directory>/tmp/${project.groupId}.${project.artifactId}</directory>
	</build>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>nabu</groupId>
				<artifactId>utils</artifactId>
				<version>${nabu-utils-version}</version>
			</dependency>
			<dependency>
				<groupId>nabu.protocols.http</groupId>
				<artifactId>server</artifactId>
				<version>${nabu.protocols.http-server-version}</version>
			</dependency>
			<dependency>
				<groupId>nabu.authentication.oauth2</groupId>
				<artifactId>server</artifactId>
				<version>${nabu.authentication.oauth2-server-version}</version>
			</dependency>
			<dependency>
				<groupId>nabu.web</groupId>
				<artifactId>application</artifactId>
				<version>${nabu.web-application-version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
