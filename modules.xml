<project>
	<modelVersion>4.0.0</modelVersion>
	<groupId>be.nabu</groupId>
	<artifactId>modules</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<parent>
		<groupId>be.nabu</groupId>
		<artifactId>core</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	
	<properties>
		<nabu.authentication-kerberos-server-version>1.0-SNAPSHOT</nabu.authentication-kerberos-server-version>
	</properties>
	
	<build>
		<resources>
			<resource>
				<directory>.</directory>
				<excludes>
					<exclude>.flattened-pom.xml</exclude>
					<exclude>target</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>flatten-maven-plugin</artifactId>
				<configuration>
				</configuration>
				<executions>
					<execution>
						<id>flatten</id>
						<phase>process-resources</phase>
						<goals>
							<goal>flatten</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>nabu.authentication.kerberos</groupId>
				<artifactId>server</artifactId>
				<version>${nabu.authentication-kerberos-server-version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.11</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
</project>
